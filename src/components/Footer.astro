---
const year = new Date().getFullYear();
const email = 'sproutforged@gmail.com';
const instagram = 'https://www.instagram.com/hand.slearning/';
const etsy = 'https://sproutforge3d.etsy.com';
const logoPath = "/images/hands-logo-lossless.webp";
---
<footer class="footer-root">
  <div class="footer-inner">
    <!-- Left: brand + 2x4 nav grid -->
    <div class="footer-left">
      <div class="brandline">
        <img src={logoPath} alt="HANDS logo" width="22" height="22" class="brand-logo" decoding="async" />
        <strong class="brand">HANDS</strong>
        <span class="muted">Â© {year}</span>
      </div>

      <nav class="links links-grid" aria-label="Footer">
        <a href="/product">Product</a>
        <a href="/mission">Mission</a>
        <a href="/founders">Founders</a>
        <a href="/venture">Venture</a>
        <a href="/contact">Contact</a>
        <a href="/faq">FAQ</a>
        <a href="/research">Research</a>
        <a href="https://www.etsy.com/listing/4368469267/3d-dnarna-assembly-kit-stem-learning-kit?etsrc=sdt" target="_blank" rel="noopener">Etsy</a>
      </nav>
    </div>

    <!-- Right: brand contact (ghost buttons) -->
    <div class="footer-right">
      <p class="footer-contact-title">Contact</p>
      <div class="footer-contact-actions">
        <a class="btn-ghost focus-ring" href={"mailto:" + email} aria-label="Email">
          <img
            src="/images/email.svg"
            alt="Email icon"
            width="18"
            height="18"
            loading="lazy"
          />
          <span>{email}</span>
        </a>

        <a class="btn-ghost focus-ring" href={instagram} target="_blank" rel="noopener" aria-label="Instagram">
          <img
            src="/images/instagram.svg"
            alt="Instagram icon"
            width="18"
            height="18"
            loading="lazy"
          />
          <span>@hand.slearning</span>
        </a>

        <a class="btn-ghost focus-ring" href={etsy} target="_blank" rel="noopener" aria-label="Etsy">
          <img
            src="/images/cart.svg"
            alt="Cart icon"
            width="18"
            height="18"
            loading="lazy"
          />
          <span>Etsy store</span>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-root {
    background: var(--bg);
    border-top: 1px solid rgba(202, 210, 220, 0.8);
    margin-top: 2.5rem;
  }
  .footer-inner{
    max-width:1180px; margin:0 auto; padding: 1rem;
    display:grid; grid-template-columns: 1fr; gap:1rem;
    align-items:start;
  }

  /* two columns on larger screens */
  @media (min-width: 960px) {
    .footer-inner{ grid-template-columns: 1fr auto; }
  }

  .brandline{
    display:flex; align-items:center; gap:.6rem; color:rgb(71, 84, 103);
    margin-bottom:.35rem;
  }
  .brand-logo{ border-radius:.5rem; box-shadow:0 0 0 1px rgba(31,75,184,.08); }
  .brand{
    font-family: var(--font-display, 'Manrope', Inter, system-ui, sans-serif);
    font-weight:800; color: rgb(31,75,184);
  }
  .links{
    color: rgb(71,84,103);
  }
  .links a{
    text-decoration:none; color:inherit; padding:.2rem .4rem; border-radius:.5rem;
    transition: background-color .15s ease, color .15s ease;
  }
  .links a:hover{
    background: rgb(230,240,255); color: rgb(31,75,184);
  }

  /* 2x4 grid layout for the footer tabs */
  .links-grid{
    display: grid;
    grid-template-columns: repeat(2, auto);
    gap: .4rem .75rem;
  }
  @media (min-width: 640px) {
    .links-grid{
      grid-template-columns: repeat(4, auto);
    }
  }

  /* Right column */
  .footer-right {
    display:flex; flex-direction:column; align-items:flex-start; gap:.4rem;
  }
  .footer-contact-title{
    font-weight:800; letter-spacing:.3px;
    color: rgb(31,75,184);
    margin: 0 0 .25rem 0;
  }
  .footer-contact-actions{
    display:flex; flex-wrap:wrap; gap:.4rem;
  }
  .footer-contact-actions .btn-ghost{
    display:inline-flex; align-items:center; gap:.4rem;
    padding:.45rem .6rem;
  }
  .footer-contact-actions svg{ stroke-width:1.75; }
</style>

